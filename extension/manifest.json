{
    "name": "YouTube Channel Stats",
    "version": "1.0",
    "manifest_version": 3,
    "description": "This extension calculates various stats about the current YouTube channel.",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "back.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
      ]
}